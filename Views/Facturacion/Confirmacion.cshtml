@{
    ViewData["Title"] = "Factura";
}
<head>
    <link rel="stylesheet" href="~/css/sytles.css" />
</head>
<div class="container mt-4">
    <div class="card shadow p-4">
        <h2 class="text-center text-primary">Factura</h2>
        
        <!-- Datos de la Factura -->
        <div class="row mt-3">
            <div class="col-md-6">
                <p><strong>ID Factura:</strong> @Model.FacturaID</p>
                <p><strong>Fecha:</strong> @Model.Factura.FechaCreacion.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p><strong>Cliente:</strong> @Context.Session.GetString("Nombre")</p>
                <p><strong>Correo:</strong>@Context.Session.GetString("Email")</p>
            </div>
        </div>

        <!-- Tabla de Productos -->
        <div class="table-responsive">
            <table class="table table-striped mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-end">Precio Unitario</th>
                        <th class="text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var detalle in Model.DetalleFactura)
                {
                    <tr>
                        <td>Producto @detalle.ProductoID</td>
                        <td>@detalle.Cantidad</td>
                        <td>@detalle.PrecioUnitario.ToString("C")</td>
                        <td>@detalle.Subtotal.ToString("C")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <!-- Resumen de Totales -->
        <div class="row mt-3">
            <div class="col-md-6 offset-md-6">
                <table class="table">
                    <tr>
                        <td><strong>Subtotal:</strong></td>
                        <td class="text-end">$@Model.Subtotal.ToString("0.00")</td>
                    </tr>
          
                    <tr class="fw-bold text-primary">
                        <td><strong>Total a Pagar:</strong></td>
                        <td class="text-end">$@Model.Total.ToString("0.00")</td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- Botones -->
        <div class="text-center mt-4">
            <a href="@Url.Action("DescargarFactura", "Facturacion", new { id = Model.FacturaID })" class="btn btn-danger me-2">
                <i class="fas fa-file-pdf"></i> Descargar PDF
            </a>
          
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Volver al Inicio</a>
        </div>
    </div>
</div>
