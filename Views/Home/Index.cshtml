@using System.Net.Mime
@model List<K_F_ClothingStore.Models.Producto>


@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<!-- Sección de productos -->
<div class="container mt-4">
    <h2 class="text-center">Nuestros Productos</h2>
    <div class="row">
        @foreach (var producto in Model)
        {
          
                   <div class="col-md-4 mb-4">
                       <div class="card">
                           
                           @{
                               var imagenRuta = Url.Content("~/Img/" + producto.ImagenUrl);
                           }
                           <img src="@imagenRuta" class="card-img-top" alt="@producto.NombreProducto">
                           
                           <div class="card-body">
                               
                               <h5 class="card-title">@producto.NombreProducto</h5>
                               <p class="card-text">@producto.Descripcion</p>
                               <p class="fw-bold">$@producto.Precio</p>
                               <a href="@Url.Action("AgregarAlCarrito", "Carrito", new { id = producto.ID })" class="btn btn-success">Agregar al Carrito</a>
                           </div>
                       </div>
            </div>
        }
    </div>
</div>
</body>
</html>
