@section Scripts {
    <script>
        $(document).ready(function () {
            // Cuando se hace clic en "Agregar al Carrito"
            $('.agregar-carrito').on('click', function () {
                var productoId = $(this).data('producto-id'); // Obtener el ID del producto
                $('#productoId').val(productoId); // Asignar el ID al campo oculto del modal
            });

            // Cuando se confirma la acción en el modal
            $('#btnConfirmarAgregar').on('click', function () {
                var productoId = $('#productoId').val();
                var cantidad = $('#cantidad').val();

                // Enviar la solicitud al servidor
                $.ajax({
                    url: '@Url.Action("AgregarAlCarrito", "Carrito")',
                    type: 'POST',
                    data: {
                        productoId: productoId,
                        cantidad: cantidad
                    },
                    success: function (response) {
                        if (response.success) {
                            alert('Producto agregado al carrito correctamente.');

                            // Cerrar el modal y eliminar el fondo opaco
                            var modalElement = document.getElementById('agregarCarritoModal');
                            var modal = bootstrap.Modal.getInstance(modalElement);
                            modal.close(); // Cierra el modal
                          
                            // Eliminar el fondo opaco y restaurar el estado de la página
                            $('body').removeClass('modal-open');
                            $('.modal-backdrop').remove();

                            // Reiniciar el formulario dentro del modal
                            $('#formAgregarCarrito').trigger('reset');
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Hubo un error al agregar el producto al carrito.');
                    }
                });
            });

            // Reiniciar el modal cuando se cierra
            $('#agregarCarritoModal').on('hidden.bs.modal', function () {
                $(this).find('form').trigger('reset'); // Reiniciar el formulario
            });
        });
    </script>
}
@model List<K_F_ClothingStore.Models.Producto>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="~/css/sytles.css" />
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet"/>
    <link href="/css/cartas.css" rel="stylesheet">
</head>
<body>

<!-- Sección de productos -->
<div class="container mt-4">
    <h2 class="text-center">Nuestros Productos</h2>
    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @{
                        var imagenRuta = Url.Content("~/Img/" + producto.ImagenUrl);
                    }
                    <img src="@imagenRuta" class="card-img-top" alt="@producto.NombreProducto">
                    <div class="card-body">
                        <h5 class="card-title">@producto.NombreProducto</h5>
                        <p class="card-text">@producto.Descripcion</p>
                        <p class="fw-bold">$@producto.Precio</p>
                        <a href="#" class="btn btn-success agregar-carrito" data-bs-toggle="modal" data-bs-target="#agregarCarritoModal" data-producto-id="@producto.ID">Agregar al Carrito</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal para agregar al carrito -->
<div class="modal fade" id="agregarCarritoModal" tabindex="-1" aria-labelledby="agregarCarritoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarCarritoModalLabel">Agregar al Carrito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formAgregarCarrito">
                    <input type="hidden" id="productoId" name="productoId" />
                    <div class="form-group">
                        <label for="cantidad">Cantidad:</label>
                        <input type="number" id="cantidad" name="cantidad" class="form-control" min="1" value="1" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnConfirmarAgregar">Agregar</button>
            </div>
        </div>
    </div>
</div>

</body>
</html>