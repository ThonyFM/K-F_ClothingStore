@model RegistroViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>

<body class="bg-gradient d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea, #764ba2); height: 100%; padding: 30px 0;">
<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h3 class="mb-0"><i class="fa fa-user-plus"></i> Registro de Usuario</h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @using (Html.BeginForm("Registro", "Auth", FormMethod.Post, new { @class = "row g-3" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Usuario.NombreUsuario, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Usuario.NombreUsuario, new { @class = "form-control", placeholder = "Nombre de usuario", required = "required" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Usuario.ContrasenaHash, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Usuario.ContrasenaHash, new { @class = "form-control", placeholder = "Contraseña", required = "required" })
                        </div>

                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Usuario.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Usuario.Email, new { @class = "form-control", type = "email", placeholder = "Correo electrónico", required = "required" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.Nombre1, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Persona.Nombre1, new { @class = "form-control", placeholder = "Primer nombre", required = "required" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.Nombre2, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Persona.Nombre2, new { @class = "form-control", placeholder = "Segundo nombre" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.Apellido1, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Persona.Apellido1, new { @class = "form-control", placeholder = "Primer apellido", required = "required" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.Apellido2, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Persona.Apellido2, new { @class = "form-control", placeholder = "Segundo apellido" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.DocumentoIdentidad, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Persona.DocumentoIdentidad, new { @class = "form-control", placeholder = "Documento de identidad", required = "required" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.Telefono, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Persona.Telefono, new { @class = "form-control", placeholder = "Teléfono" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.FechaNacimiento, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Persona.FechaNacimiento, new { @class = "form-control", type = "date" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Persona.Genero, new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.Persona.Genero, new SelectList(new[]{"Masculino","Femenino","Otro"}),"Selecciona", new { @class = "form-select", required = "required" })
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Registrarse</button>
                            <a href="@Url.Action("InicioSesion", "Auth")" class="btn btn-outline-secondary btn-lg w-100 mt-2">¿Ya tienes cuenta? Inicia sesión</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</body>
