<script>
    document.getElementById("userMenu").addEventListener("click", async function (event) {
        event.preventDefault(); // Prevent default behavior (e.g., page reload)
        try {
            // Show loading state
            document.getElementById("userNombre").textContent = "Cargando...";
            document.getElementById("userTelefono").textContent = "Cargando...";
            document.getElementById("userDireccion").textContent = "Cargando...";

            // Fetch user data
            var response = await fetch('/Usuario/o');
            if (!response.ok) {
                throw new Error("Error al obtener los datos del usuario");
            }

            var data = await response.json();

            if (data.success) {
                // Update dropdown content
                document.getElementById("userNombre").textContent = "Nombre: " + data.usuario.Nombre;
                document.getElementById("userTelefono").textContent = "Teléfono: " + data.usuario.Telefono;
                document.getElementById("userDireccion").textContent = "Dirección: " + data.usuario.Direccion;
            } else {
                alert("Error: " + data.message);
            }
        } catch (error) {
            console.error("Error:", error);
            alert("Hubo un problema al cargar los datos del usuario.");
        }
    });
</script>

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">K_F_ClothingStore</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a></li>
                @if (Context.Session.GetString("Rol") == "Admin")
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Usuarios">Usuarios</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Reportes">Reportes</a></li>
                }
                @if (Context.Session.GetString("Rol") == "Cliente")
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="Perfil">Perfil</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="Compras">Mis Compras</a></li>
                }
            </ul>

            <!-- Burbuja de usuario -->
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="/images/user-icon.png" class="rounded-circle" width="40" height="40" alt="@Context.Session.GetString("Usuario")"/>
                </button>
                <div class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="userMenu">
                    <p class="text-center"><strong>@Context.Session.GetString("Email")</strong></p>
                    <hr>
                    <p id="userNombre">Nombre: @Context.Session.GetString("Nombre")</p>
                    <p id="userTelefono">Teléfono: @Context.Session.GetString("Telefono")</p>
                    <p id="userDireccion">Tipo Dirección: @Context.Session.GetString("TipoDireccion")</p>
                    <p id="userRol">Rol: @Context.Session.GetString("Rol")</p>
                    <a class="btn btn-primary w-100" asp-controller="Cliente" asp-action="Perfil">Ver Perfil</a>
                </div>
            </div>
        </div>
    </div>
</nav>