@model List<CarritoItem>

@{
    ViewData["Title"] = "Mi Carrito";
  
}

<!DOCTYPE html>
<html>
<head>
    <title>Mi Carrito</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/cartas.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
<div class="container mt-4">
    <h2 class="text-center">Mi Carrito</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @{
                        var imagenRuta = Url.Content("~/Img/" + item.ImagenUrl);
                    }
                    <img src="@imagenRuta" class="card-img-top" alt="@item.NombreProducto">
                    <div class="card-body">
                        <h5 class="card-title">@item.NombreProducto</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="fw-bold">Precio unitario: $@item.Precio</p>
                        <div class="form-group">
                            <label for="cantidad-@item.ProductoID">Cantidad:</label>
                            <input type="number" id="cantidad-@item.ProductoID" class="form-control cantidad-input"
                                   value="@item.Cantidad" min="1" data-producto-id="@item.ProductoID" />
                        </div>
                        <p class="fw-bold">Total: $@(item.Precio * item.Cantidad)</p>
                        <button class="btn btn-danger eliminar-carrito" data-producto-id="@item.ProductoID">Eliminar</button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <button class="btn btn-primary" id="realizarCompra">Realizar Compra</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Actualizar la cantidad cuando cambia el input
        $('.cantidad-input').on('change', function () {
            var productoId = $(this).data('producto-id');
            var cantidad = $(this).val();

            $.ajax({
                url: '@Url.Action("ActualizarCantidad", "Carrito")',
                type: 'POST',
                data: {
                    productoId: productoId,
                    cantidad: cantidad
                },
                success: function (response) {
                    if (response.success) {
                        location.reload(); // Recargar la página para reflejar los cambios
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function () {
                    alert('Hubo un error al actualizar la cantidad.');
                }
            });
        });

        // Eliminar producto del carrito
        $('.eliminar-carrito').on('click', function () {
            var productoId = $(this).data('producto-id');

            $.ajax({
                url: '@Url.Action("EliminarDelCarrito", "Carrito")',
                type: 'POST',
                data: {
                    productoId: productoId
                },
                success: function (response) {
                    if (response.success) {
                        location.reload(); // Recargar la página para reflejar los cambios
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function () {
                    alert('Hubo un error al eliminar el producto.');
                }
            });
        });
    });
</script>
</body>
</html>