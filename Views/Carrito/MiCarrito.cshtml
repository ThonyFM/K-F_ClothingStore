@model List<CarritoItem>
@{
    ViewData["Title"] = "Mi Carrito";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - K_F_ClothingStore</title>
    <link rel="stylesheet" href="~/css/estilos_personalizados.css" />
</head>
<body>
<div class="container mt-5 fade-in">
    <h2 class="text-center text-white mb-4">🛒 Mi Carrito</h2>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            var imagenRuta = Url.Content("~/Img/" + item.ImagenUrl);

            <div class="col-md-4 mb-4 fade-in">
                <div class="card h-100 text-center">
                    <img src="@imagenRuta" class="card-img-top" alt="@item.NombreProducto" style="height: 220px; object-fit: contain;">

                    <div class="card-body">
                        <h5 class="card-title">@item.NombreProducto</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="fw-bold text-success">₡@item.Precio.ToString("N0")</p>

                        <label for="cantidad-@item.ProductoID" class="form-label">Cantidad</label>
                        <input type="number" id="cantidad-@item.ProductoID"
                               class="form-control cantidad-input text-center"
                               value="@item.Cantidad" min="1"
                               data-producto-id="@item.ProductoID" />

                        <p class="mt-2 fw-bold">Total: ₡@((item.Precio * item.Cantidad).ToString("N0"))</p>

                        <button class="btn btn-danger eliminar-carrito mt-3 w-75" data-producto-id="@item.ProductoID">
                            Eliminar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Facturacion")" class="btn btn-success btn-lg px-5">
            🧾 Realizar Compra
        </a>
    </div>
</div>

<script>
    $(function () {
        // Actualizar cantidad
        $('.cantidad-input').on('change', function () {
            const id = $(this).data('producto-id');
            const cantidad = $(this).val();

            $.post('@Url.Action("ActualizarCantidad", "Carrito")', { productoId: id, cantidad: cantidad })
                .done(resp => resp.success ? location.reload() : alert('Error: ' + resp.message))
                .fail(() => alert('Error al actualizar cantidad.'));
        });

        // Eliminar del carrito
        $('.eliminar-carrito').on('click', function () {
            const id = $(this).data('producto-id');

            $.post('@Url.Action("EliminarDelCarrito", "Carrito")', { productoId: id })
                .done(resp => resp.success ? location.reload() : alert('Error: ' + resp.message))
                .fail(() => alert('Error al eliminar producto.'));
        });
    });
</script>
</body>
</html>
